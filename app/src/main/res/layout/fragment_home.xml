<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ljc.socialdemo.widget.MyToolBar
        android:id="@+id/toolbar"
        style="@style/TransculentToolBar"
        android:layout_width="match_parent"
        app:titleLeftDrawable="@null"
        android:layout_height="wrap_content"
        app:titleText="首页" />

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:id="@+id/tablayout"
        app:tabTextColor="@color/black"
        app:tabMinWidth="@dimen/dp100"
        app:tabIndicatorHeight="@dimen/dp1"
        app:tabIndicatorColor="@color/burlywood"
        app:tabSelectedTextColor="@color/peachpuff"
        android:layout_height="wrap_content"/>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:id="@+id/vp"
        android:layout_height="match_parent"/>
</LinearLayout>