<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.ljc.socialdemo.widget.MyToolBar
            android:id="@+id/toolbar"
            style="@style/TransculentToolBar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_marginLeft="@dimen/dp45"
        android:layout_marginRight="@dimen/dp45"
        android:background="@drawable/bg_login_forgetpsw"
        android:layout_marginTop="@dimen/dp20"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            android:id="@+id/user_account"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:drawablePadding="@dimen/dp12"
            android:paddingLeft="@dimen/dp12"
            android:drawableLeft="@drawable/login_icon_mima"
            android:hint="请输入用户名"
            android:inputType="text"
            android:lines="1"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_hint_color"
            android:textSize="@dimen/sp16"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_marginLeft="@dimen/dp45"
        android:layout_marginRight="@dimen/dp45"
        android:background="@drawable/bg_login_forgetpsw"
        android:layout_marginTop="@dimen/dp20"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            android:id="@+id/user_password_first"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:drawablePadding="@dimen/dp12"
            android:paddingLeft="@dimen/dp12"
            android:drawableLeft="@drawable/login_icon_mima"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:lines="1"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_hint_color"
            android:textSize="@dimen/sp16"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/user_show_password_first"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:src="@drawable/login_icon_hidepsw"
            android:clickable="true"
            android:visibility="visible"
            android:layout_marginRight="@dimen/dp20"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_marginLeft="@dimen/dp45"
        android:layout_marginRight="@dimen/dp45"
        android:background="@drawable/bg_login_forgetpsw"
        android:layout_marginTop="@dimen/dp20"
        android:orientation="horizontal"
        android:gravity="center">
        <EditText
            android:id="@+id/user_password_scend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:drawablePadding="@dimen/dp12"
            android:paddingLeft="@dimen/dp12"
            android:drawableLeft="@drawable/login_icon_mima"
            android:hint="请确认密码"
            android:inputType="textPassword"
            android:lines="1"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_hint_color"
            android:textSize="@dimen/sp16"
            android:layout_weight="1"
            />

        <ImageView
            android:id="@+id/user_show_password_scend"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:src="@drawable/login_icon_hidepsw"
            android:clickable="true"
            android:visibility="visible"
            android:layout_marginRight="@dimen/dp20"
            />


    </LinearLayout>

    <Button
        android:id="@+id/user_login_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:background="@drawable/bg_login_btn"
        android:text="完 成"
        android:textSize="@dimen/sp18"
        android:textColor="@android:color/white"
        android:layout_marginRight="@dimen/dp45"
        android:layout_marginLeft="@dimen/dp45"
        android:layout_marginTop="@dimen/dp16"/>

</LinearLayout>